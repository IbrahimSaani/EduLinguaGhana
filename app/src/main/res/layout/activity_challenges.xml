<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context=".ChallengesActivity">

    <!-- App Bar with Enhanced Design -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        android:elevation="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Toolbar with Custom Styling -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/challenges_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            app:title="ðŸ† Challenges"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/white"
            app:layout_scrollFlags="scroll|enterAlways" />

        <!-- Custom Header Card Inside AppBar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="16dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenge Your Friends!"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:alpha="0.9"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send challenges, track progress, and compete"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:alpha="0.8" />

        </LinearLayout>

        <!-- Modern Tab Layout -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/challenges_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:elevation="4dp"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabIndicatorHeight="3dp"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorAnimationMode="elastic"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextColor="@color/textColorSecondary"
            app:tabRippleColor="@color/colorPrimaryLight"
            app:tabUnboundedRipple="false" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ViewPager2 with Enhanced Styling -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/challenges_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appBackground"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Floating Action Button for Creating New Challenge -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_new_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="New Challenge"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/white"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="6dp"
        app:borderWidth="0dp"
        android:contentDescription="Create new challenge" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
