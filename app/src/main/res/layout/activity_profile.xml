<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_day">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/white">

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/agbalumo"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:paddingBottom="24dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Not Signed In State -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/notSignedInLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="40dp">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@drawable/ic_graduation_cap"
                        android:contentDescription="App Icon"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="Sign in to track your progress"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/agbalumo"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:letterSpacing="0.02" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Create an account to save your learning progress, earn achievements, and sync across devices!"
                        android:textSize="16sp"
                        android:textColor="@color/textColorSecondary"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGoToLogin"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_marginTop="32dp"
                        android:text="Sign In / Sign Up"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/colorPrimary"
                        app:cornerRadius="29dp"
                        app:elevation="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Signed In State -->
            <LinearLayout
                android:id="@+id/signedInLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:visibility="visible">

                <!-- Profile Picture Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="32dp"
                    app:cardCornerRadius="70dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="3dp"
                    app:strokeColor="@color/colorPrimary">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_graduation_cap"
                        android:scaleType="centerInside"
                        android:contentDescription="Profile Picture" />

                </com.google.android.material.card.MaterialCardView>

                <!-- User Name -->
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Young Learner"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/agbalumo"
                    android:textColor="@color/colorPrimary"
                    android:letterSpacing="0.02" />

                <!-- User Email (optional display) -->
                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="user@example.com"
                    android:textSize="15sp"
                    android:textColor="@color/textColorSecondary"
                    android:alpha="0.8" />

                <!-- Learning Progress Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/cardBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“Š Learning Progress"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/agbalumo"
                            android:textColor="@color/colorPrimary"
                            android:letterSpacing="0.02" />

                        <!-- Streak Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:background="@drawable/bg_mode_quiz">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ðŸ”¥ Learning Streak"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/textColorPrimary" />

                            <TextView
                                android:id="@+id/tvProfileStreak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 days"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary" />

                        </LinearLayout>

                        <!-- Total Lessons Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:background="@drawable/bg_mode_practice">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ðŸ“š Total Lessons"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/textColorPrimary" />

                            <TextView
                                android:id="@+id/tvTotalLessons"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary" />

                        </LinearLayout>

                        <!-- Best Score Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:background="@drawable/bg_mode_progress">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ðŸ† Best Quiz Score"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/textColorPrimary" />

                            <TextView
                                android:id="@+id/tvBestScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 / 10"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Achievements Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/cardBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒŸ Achievements"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/agbalumo"
                            android:textColor="@color/colorPrimary"
                            android:letterSpacing="0.02" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Complete lessons to unlock achievements!"
                            android:textSize="15sp"
                            android:textColor="@color/textColorSecondary"
                            android:lineSpacingExtra="2dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="20dp"
                            android:background="@drawable/bg_mode_recital">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â­ â­ â­"
                                android:textSize="40sp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Favorite Language Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/cardBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ Favorite Language"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/agbalumo"
                            android:textColor="@color/colorPrimary"
                            android:letterSpacing="0.02" />

                        <TextView
                            android:id="@+id/tvFavoriteLanguage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Not set yet"
                            android:textSize="17sp"
                            android:textColor="@color/textColorSecondary" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Account Management Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="32dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/cardBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš™ï¸ Account Settings"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/agbalumo"
                            android:textColor="@color/colorPrimary"
                            android:letterSpacing="0.02" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnManageAccount"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="20dp"
                            android:text="Manage Account"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:cornerRadius="28dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/colorPrimary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSignOut"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="Sign Out"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_red_dark"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            app:cornerRadius="28dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

