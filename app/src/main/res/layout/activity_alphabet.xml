<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context=".AlphabetActivity">

    <!-- Decorative background elements -->
    <ImageView
        android:id="@+id/decorativeShape1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:alpha="0.3"
        android:contentDescription="@null"
        android:src="@drawable/shape_circle_pink" />

    <ImageView
        android:id="@+id/decorativeShape2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="30dp"
        android:alpha="0.3"
        android:contentDescription="@null"
        android:src="@drawable/shape_star" />

    <ImageView
        android:id="@+id/decorativeShape3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="150dp"
        android:alpha="0.3"
        android:contentDescription="@null"
        android:src="@drawable/shape_circle_cyan" />

    <ImageView
        android:id="@+id/decorativeShape4"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center|end"
        android:layout_marginEnd="25dp"
        android:alpha="0.3"
        android:contentDescription="@null"
        android:src="@drawable/shape_sparkle" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/alphabet_mode" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Progress Section with Icon -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/progressIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_progress_sparkle"
                    app:tint="@color/colorAccent" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/progressIcon"
                    android:progress="0"
                    app:indicatorColor="@color/colorAccent"
                    app:trackColor="@color/buttonSecondary"
                    app:trackCornerRadius="8dp"
                    app:trackThickness="8dp" />
            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/languageCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:foreground="@drawable/ripple_card_effect"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/languageIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_flag_ghana" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvLanguageTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/language_prefix"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvModeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/alphabet_mode"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/modeIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_decorative_star"
                        app:tint="@color/colorAccent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Main Content Area -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/letterCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="80dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="16dp"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="2dp">

                    <!-- Subtle gradient background -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.03"
                        android:background="@drawable/bg_splash_gradient" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="40dp"
                        android:paddingBottom="40dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp">

                        <!-- Main letter with subtle shadow -->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp">

                            <TextView
                                android:id="@+id/tvLetterShadow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_marginStart="3dp"
                                android:fontFamily="@font/agbalumo"
                                android:text="A"
                                android:alpha="0.15"
                                android:textColor="@android:color/black"
                                android:textSize="140sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvLetter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/agbalumo"
                                android:text="A"
                                android:textColor="@color/colorAccent"
                                android:textSize="140sp"
                                android:textStyle="bold" />
                        </FrameLayout>

                        <!-- Word display -->
                        <TextView
                            android:id="@+id/tvLetterWord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/agbalumo"
                            tools:text="Apple" />

                        <!-- Speak button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSpeak"
                            style="@style/Widget.Material3.Button.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:minWidth="180dp"
                            android:paddingStart="28dp"
                            android:paddingEnd="28dp"
                            android:text="@string/speak_button"
                            android:textSize="16sp"
                            app:cornerRadius="28dp"
                            app:icon="@drawable/ic_speak"
                            app:iconSize="24dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Navigation Buttons Overlay -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPrev"
                    style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/content_description_previous"
                    app:cornerRadius="28dp"
                    app:elevation="8dp"
                    app:icon="@drawable/ic_arrow_back"
                    app:iconGravity="textStart"
                    app:iconSize="28dp"
                    app:iconPadding="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNext"
                    style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/content_description_next"
                    app:cornerRadius="28dp"
                    app:elevation="8dp"
                    app:icon="@drawable/ic_arrow_forward"
                    app:iconGravity="textStart"
                    app:iconSize="28dp"
                    app:iconPadding="0dp" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/content_description_back"
        app:srcCompat="@drawable/ic_back_fab" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>