<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_day"
    tools:context=".SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="0dp"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_settings"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Settings"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_title"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/agbalumo"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <!-- Note: Font will be applied programmatically in SettingsActivity -->

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:clipToPadding="false"
            android:clipChildren="false">

            <!-- Audio Settings -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/dividerColor"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”Š"
                            android:textSize="28sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tvAudioHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_audio_title"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/agbalumo" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchMusic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="@string/settings_background_music"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@color/dividerColor" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSfx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="@string/settings_sound_effects"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="15sp" />


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Visual Settings -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/dividerColor"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ¨"
                            android:textSize="28sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tvVisualHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_visual_title"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/agbalumo" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAnimations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="@string/settings_background_animations"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@color/dividerColor" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchLowPowerAnimations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="@string/settings_low_power_animations"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="15sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Theme Selection -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/dividerColor"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ“"
                            android:textSize="28sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tvThemeHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_theme_title"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/agbalumo" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/rgTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">

                        <RadioButton
                            android:id="@+id/rbLight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="52dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:text="@string/settings_theme_light"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/rbDark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="52dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:text="@string/settings_theme_dark"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/rbSystem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:minHeight="52dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:text="@string/settings_theme_system"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="15sp" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reset Progress Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/wrongAnswer"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš ï¸"
                            android:textSize="28sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tvProgressHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_progress_title"
                            android:textColor="@color/wrongAnswer"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/agbalumo" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="@string/settings_reset_warning"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnResetProgress"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="@string/settings_reset_progress"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_delete"
                        app:iconGravity="textStart"
                        app:iconSize="20dp"
                        app:iconPadding="8dp"
                        app:cornerRadius="12dp"
                        android:elevation="2dp"
                        app:backgroundTint="@color/wrongAnswer" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Account & Role Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/dividerColor"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘¤"
                            android:textSize="28sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tvAccountHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account &amp; Role"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/agbalumo" />
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/cardBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current Role"
                                android:textSize="12sp"
                                android:textColor="@color/textColorSecondary"
                                android:textAllCaps="true"
                                android:letterSpacing="0.1"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvCurrentRole"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Loading..."
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/agbalumo" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="Choose your role to access features tailored for students, teachers, or parents."
                        android:textColor="@color/textColorSecondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChangeRole"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Change Role"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_user"
                        app:iconGravity="textStart"
                        app:iconSize="20dp"
                        app:iconPadding="8dp"
                        app:cornerRadius="12dp"
                        android:elevation="0dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Cloud Sync Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/dividerColor"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â˜ï¸"
                            android:textSize="28sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tvCloudHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cloud Sync"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/agbalumo" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="Backup and sync your progress across devices"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp" />

                    <TextView
                        android:id="@+id/tvLastSync"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="Last sync: Never"
                        android:textSize="13sp"
                        android:textColor="@color/textColorSecondary"
                        android:textStyle="italic" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSyncToCloud"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:text="Upload to Cloud"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:icon="@android:drawable/ic_menu_upload"
                        app:iconGravity="textStart"
                        app:iconSize="20dp"
                        app:iconPadding="8dp"
                        app:cornerRadius="12dp"
                        app:strokeWidth="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSyncFromCloud"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Download from Cloud"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:icon="@android:drawable/stat_sys_download"
                        app:iconGravity="textStart"
                        app:iconSize="20dp"
                        app:iconPadding="8dp"
                        app:cornerRadius="12dp"
                        app:strokeWidth="2dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>