<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.edulinguaghana.DynamicBackgroundView
        android:id="@+id/dynamicBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/colorPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Avatar Preview Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1A000000"
            app:cardBackgroundColor="#CCFFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customize Your Look"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/agbalumo"
                    android:textColor="@color/colorPrimary"
                    android:letterSpacing="0.02" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="80dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="4dp"
                    app:strokeColor="@color/white"
                    app:cardBackgroundColor="@color/white">

                    <com.edulinguaghana.AvatarView
                        android:id="@+id/avatarPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="4dp"
                        android:scaleType="fitCenter" />

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChangeBackground"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:text="Background"
                        app:icon="@android:drawable/ic_menu_gallery"
                        app:iconSize="16dp"
                        android:textSize="11sp"
                        android:textColor="@color/colorAccent"
                        app:iconTint="@color/colorAccent"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRandomAvatar"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:text="Randomize"
                        app:icon="@android:drawable/ic_menu_rotate"
                        app:iconSize="16dp"
                        android:textSize="11sp"
                        android:textColor="@color/colorPrimary"
                        app:iconTint="@color/colorPrimary"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#EEFFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:tabMode="scrollable"
                    app:tabGravity="fill"
                    app:tabIndicatorFullWidth="false"
                    app:tabIndicatorHeight="4dp"
                    app:tabIndicatorColor="@color/colorPrimary"
                    app:tabSelectedTextColor="@color/colorPrimary"
                    app:tabTextColor="@color/textColorSecondary"
                    app:tabRippleColor="@color/colorAccent"
                    app:tabIndicatorAnimationMode="elastic" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#1A000000" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveAvatar"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:text="Save My Avatar!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/agbalumo"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"
            app:cornerRadius="36dp"
            app:elevation="12dp"
            app:icon="@android:drawable/ic_menu_save"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconSize="28dp"
            app:iconTint="@color/white"
            app:rippleColor="@color/colorAccent" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
