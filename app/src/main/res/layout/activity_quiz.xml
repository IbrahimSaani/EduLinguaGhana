<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context=".QuizActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Quiz Mode" />

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Start Screen -->
        <ScrollView
            android:id="@+id/startQuizContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/ivQuizIcon"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp"
                            tools:src="@drawable/ic_quiz_letters" />

                        <TextView
                            android:id="@+id/tvStartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/agbalumo"
                            android:gravity="center"
                            android:textAppearance="?attr/textAppearanceHeadline5"
                            tools:text="Letters Quiz" />

                        <TextView
                            android:id="@+id/tvStartDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:textAppearance="?attr/textAppearanceBody1"
                            tools:text="Listen to the letter and choose the correct option."
                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartQuiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Start Quiz" />

            </LinearLayout>
        </ScrollView>

        <!-- Quiz Content -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/quizContentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Stats Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvTimer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="4dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            app:drawableStartCompat="@drawable/ic_timer"
                            tools:text="Time: 30s" />

                        <TextView
                            android:id="@+id/tvScore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="4dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            app:drawableStartCompat="@drawable/ic_score"
                            tools:text="Score: 0" />

                        <TextView
                            android:id="@+id/tvBest"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="4dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            app:drawableStartCompat="@drawable/ic_best_score"
                            tools:text="Best: 0" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Prompt Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvGamePrompt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/btnPlayAudio"
                            android:layout_alignParentStart="true"
                            android:textAppearance="?attr/textAppearanceHeadline5"
                            tools:text="Which letter did you hear?" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnPlayAudio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:contentDescription="Play Audio Prompt"
                            app:srcCompat="@drawable/ic_play_audio" />

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Options -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOption1"
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        tools:text="A" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOption2"
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        tools:text="B" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOption3"
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        tools:text="C" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOption4"
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        tools:text="D" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOption5"
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        tools:text="E" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOption6"
                        android:layout_width="0dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        tools:text="F" />

                </GridLayout>

                <TextView
                    android:id="@+id/tvFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    tools:text="âœ… Correct!" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- End Screen -->
        <LinearLayout
            android:id="@+id/endQuizContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:lottie_rawRes="@raw/kids_animation"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

            <TextView
                android:id="@+id/tvEndTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agbalumo"
                android:gravity="center"
                android:text="Time's Up!"
                android:textAppearance="?attr/textAppearanceHeadline4" />

            <TextView
                android:id="@+id/tvNewHighScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/agbalumo"
                android:gravity="center"
                android:text="New High Score! ðŸŽ‰"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textColor="?attr/colorPrimary"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvFinalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                tools:text="Your Score: 12" />

            <TextView
                android:id="@+id/tvEndBestScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceBody1"
                tools:text="Best Score: 15" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlayAgain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Play Again" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEndQuit"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quit" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
