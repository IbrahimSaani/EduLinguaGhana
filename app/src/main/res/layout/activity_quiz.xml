<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context=".QuizActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Quiz Mode" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Stats Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvQuestionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        tools:text="Letters Quiz – English" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTimer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="4dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            app:drawableStartCompat="@drawable/ic_timer"
                            tools:text="Time: 30s" />

                        <TextView
                            android:id="@+id/tvScore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="4dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            app:drawableStartCompat="@drawable/ic_score"
                            tools:text="Score: 0" />

                        <TextView
                            android:id="@+id/tvBest"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="4dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            app:drawableStartCompat="@drawable/ic_best_score"
                            tools:text="Best: 0" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Prompt Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvGamePrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/btnPlayAudio"
                        android:layout_alignParentStart="true"
                        android:textAppearance="?attr/textAppearanceHeadline5"
                        tools:text="Which letter did you hear?" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnPlayAudio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:contentDescription="Play Audio Prompt"
                        app:srcCompat="@drawable/ic_play_audio" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Options -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOption1"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    tools:text="A" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOption2"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    tools:text="B" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOption3"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    tools:text="C" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOption4"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    tools:text="D" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOption5"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    tools:text="E" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOption6"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    tools:text="F" />

            </GridLayout>

            <TextView
                android:id="@+id/tvFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                tools:text="✅ Correct!" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackQuiz"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="End Quiz" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
