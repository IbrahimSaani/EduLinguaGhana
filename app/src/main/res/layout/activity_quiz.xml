<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F5FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top stats card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_quiz_stats"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Quiz title (e.g. "Quiz – French") -->
            <TextView
                android:id="@+id/tvQuestionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz – English"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0D47A1" />

            <!-- Timer -->
            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: 30s"
                android:textSize="14sp"
                android:textColor="#B71C1C"
                android:layout_marginTop="4dp" />

            <!-- Current score -->
            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 0"
                android:textSize="14sp"
                android:textColor="#1B5E20"
                android:layout_marginTop="4dp" />

            <!-- Best score -->
            <TextView
                android:id="@+id/tvBest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best: 0"
                android:textSize="14sp"
                android:textColor="#4E342E"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Question + Play audio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_quiz_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvGamePrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listen and choose the correct letter:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#263238"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnPlayAudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Sound"
                android:textAllCaps="false"
                android:background="@drawable/bg_quiz_primary_button"
                android:textColor="#FFFFFF"
                android:paddingLeft="24dp"
                android:paddingRight="24dp" />
        </LinearLayout>

        <!-- Options grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_quiz_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnOption1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_quiz_option"
                    android:textColor="#212121"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnOption2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="B"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_quiz_option"
                    android:textColor="#212121"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnOption3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_quiz_option"
                    android:textColor="#212121"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnOption4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="D"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_quiz_option"
                    android:textColor="#212121"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnOption5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_quiz_option"
                    android:textColor="#212121"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnOption6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="F"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_quiz_option"
                    android:textColor="#212121"
                    android:padding="12dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Feedback -->
        <TextView
            android:id="@+id/tvFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#37474F"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Back button -->
        <Button
            android:id="@+id/btnBackQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textAllCaps="false"
            android:background="@drawable/bg_quiz_secondary_button"
            android:textColor="#37474F"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
