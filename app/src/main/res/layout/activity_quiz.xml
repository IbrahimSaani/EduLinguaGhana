<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F5FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top stats card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_quiz_stats"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvGameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed Challenge"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0D47A1" />

            <TextView
                android:id="@+id/tvGameTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: 30s"
                android:textSize="14sp"
                android:textColor="#B71C1C"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvGameScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 0"
                android:textSize="14sp"
                android:textColor="#1B5E20"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvGameBest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best: 0"
                android:textSize="14sp"
                android:textColor="#4E342E"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Prompt card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_quiz_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvGamePrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap the correct letter or number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#263238" />

            <!-- Feedback text -->
            <TextView
                android:id="@+id/tvGameFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#37474F"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Options grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_quiz_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Options layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnGameOpt1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_quiz_option"
                    android:textColor="#212121"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnGameOpt2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="B"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_quiz_option"
                    android:textColor="#212121"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnGameOpt3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_quiz_option"
                    android:textColor="#212121"
                    android:padding="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnGameOpt4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="D"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_quiz_option"
                    android:textColor="#212121"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnGameOpt5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_quiz_option"
                    android:textColor="#212121"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnGameOpt6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="F"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_quiz_option"
                    android:textColor="#212121"
                    android:padding="12dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Back button -->
        <Button
            android:id="@+id/btnGameBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textAllCaps="false"
            android:background="@drawable/bg_quiz_secondary_button"
            android:textColor="#37474F"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
