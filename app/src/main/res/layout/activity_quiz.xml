<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Header: Question progress + score -->
        <TextView
            android:id="@+id/tvQuestionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 1 / 10"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:textSize="18sp"
            android:textColor="#1B5E20"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tvBestScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best: 0 / 10"
            android:textSize="16sp"
            android:textColor="#4E342E"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/tvQuestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which letter or number did you hear?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#263238"
            android:paddingBottom="24dp" />

        <Button
            android:id="@+id/btnPlayAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Audio"
            android:backgroundTint="#64B5F6"
            android:textAllCaps="false" />

        <!-- Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="32dp">

            <Button
                android:id="@+id/btnOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 1"
                android:textAllCaps="false"
                android:backgroundTint="#BBDEFB"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 2"
                android:textAllCaps="false"
                android:backgroundTint="#C5CAE9"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 3"
                android:textAllCaps="false"
                android:backgroundTint="#D1C4E9" />
        </LinearLayout>

        <!-- Feedback -->
        <TextView
            android:id="@+id/tvFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#37474F"
            android:paddingTop="24dp" />

        <!-- Controls -->
        <Button
            android:id="@+id/btnNextQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Question"
            android:textAllCaps="false"
            android:backgroundTint="#81C784"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnBackQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textAllCaps="false"
            android:backgroundTint="#FFAB91"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
