<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_day">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¬ Animated Avatars"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/agbalumo"
                        android:textColor="@color/colorPrimary"
                        android:letterSpacing="0.03" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Watch your avatars come alive!"
                        android:textSize="14sp"
                        android:textColor="@color/textColorSecondary"
                        android:layout_marginTop="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enable Animations"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="12dp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchAnimations"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Avatar 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Avatar"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/agbalumo"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Blinking eyes â€¢ Breathing smile â€¢ Swaying hair"
                        android:textSize="12sp"
                        android:textColor="@color/textColorSecondary"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        app:cardCornerRadius="110dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="3dp"
                        app:strokeColor="@color/colorPrimary">

                        <com.edulinguaghana.AnimatedAvatarView
                            android:id="@+id/animatedAvatar1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRandomize1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ² Randomize"
                        android:textSize="14sp"
                        android:layout_marginTop="16dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="20dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/colorPrimary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Avatar 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Random Avatar #1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/agbalumo"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Flowing clothes â€¢ Glowing accessories"
                        android:textSize="12sp"
                        android:textColor="@color/textColorSecondary"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        app:cardCornerRadius="110dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="3dp"
                        app:strokeColor="@color/colorAccent">

                        <com.edulinguaghana.AnimatedAvatarView
                            android:id="@+id/animatedAvatar2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRandomize2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ² Randomize"
                        android:textSize="14sp"
                        android:layout_marginTop="16dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="20dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/colorAccent" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Avatar 3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Random Avatar #2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/agbalumo"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ All animations combined â€¢ 60 FPS smooth"
                        android:textSize="12sp"
                        android:textColor="@color/textColorSecondary"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        app:cardCornerRadius="110dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="3dp"
                        app:strokeColor="@color/random_avatar_stroke_color">

                        <com.edulinguaghana.AnimatedAvatarView
                            android:id="@+id/animatedAvatar3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRandomize3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ² Randomize"
                        android:textSize="14sp"
                        android:layout_marginTop="16dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="20dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/random_avatar_stroke_color" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Features Info -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ¨ Animation Features"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/agbalumo"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘ï¸ Blinking Eyes - Natural blink every 3 seconds"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ˜Š Breathing Smile - Subtle breathing effect"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’‡ Swaying Hair - Flowing hair movement"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ¨ Glowing Accessories - Pulsing glow effect"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘” Clothing Movement - Gentle wave motion"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¬ 60 FPS Rendering - Smooth and fluid"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
