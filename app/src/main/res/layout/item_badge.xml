<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Badge Icon -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp">

            <!-- Background Circle -->
            <View
                android:id="@+id/badge_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_background" />

            <!-- Badge Emoji/Icon -->
            <TextView
                android:id="@+id/tv_badge_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðŸ†"
                android:textSize="48sp"
                android:gravity="center"
                tools:text="ðŸ†" />

            <!-- Lock Overlay for Locked Badges -->
            <ImageView
                android:id="@+id/iv_badge_lock"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/ic_lock"
                android:visibility="gone"
                android:contentDescription="Locked badge" />

        </FrameLayout>

        <!-- Badge Name -->
        <TextView
            android:id="@+id/tv_badge_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="First Quiz"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="4dp" />

        <!-- Badge Description -->
        <TextView
            android:id="@+id/tv_badge_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Complete your first quiz"
            android:textSize="11sp"
            android:textColor="@color/textSecondary"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

