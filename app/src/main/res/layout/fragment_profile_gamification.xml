<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/dividerColor"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header with Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­"
                    android:textSize="24sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your Progress"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/agbalumo" />

                <!-- Badges Preview Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/badgesContainer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/colorPrimaryLight">

                    <ImageView
                        android:id="@+id/iv_badges_preview"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_badge_unlocked"
                        android:contentDescription="@string/badges_preview"
                        app:tint="@color/colorPrimary" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Level and XP Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- XP Icon Container -->
                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/colorPrimary"
                        app:cardBackgroundColor="@color/colorPrimaryLight">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary"
                            android:alpha="0.1" />
                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:id="@+id/iv_xp_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_xp"
                        android:contentDescription="@string/xp_content_description"
                        app:tint="@color/colorPrimary" />

                </FrameLayout>

                <!-- Level and Progress Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 1"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/agbalumo"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/pb_xp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="40"
                        android:max="100"
                        app:indicatorColor="@color/colorAccent"
                        app:trackColor="@color/progressTrackColor"
                        app:trackCornerRadius="4dp"
                        app:trackThickness="8dp" />

                    <TextView
                        android:id="@+id/tv_xp_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120 / 200 XP"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/textColorSecondary"
                        android:layout_marginTop="6dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</merge>
