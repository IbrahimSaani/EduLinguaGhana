<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:elevation="4dp"
        android:background="#EEFFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_xp_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_xp"
                android:contentDescription="@string/xp_content_description" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

                <ProgressBar
                    android:id="@+id/pb_xp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:progress="40"
                    android:max="100" />

                <TextView
                    android:id="@+id/tv_xp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120 / 200 XP"
                    android:textSize="12sp"
                    android:textColor="@color/textColorSecondary" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_badges_preview"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_badge_unlocked"
                android:contentDescription="@string/badges_preview" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</merge>
