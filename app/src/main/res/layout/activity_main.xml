<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_day"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/dynamicBackgroundOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.45"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/bg_dynamic_sparkle_anim"
        android:clickable="false"
        android:focusable="false"
        android:importantForAccessibility="no"
        tools:src="@drawable/bg_dynamic_sparkle" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="40dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/starTopLeft"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:alpha="0.35"
                android:src="@android:drawable/btn_star_big_on"
                android:contentDescription="@null"
                app:tint="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/starTopRight"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:alpha="0.25"
                android:src="@android:drawable/btn_star_big_on"
                android:contentDescription="@null"
                app:tint="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- playful decorative bubbles to make the background feel more kid-friendly -->
            <ImageView
                android:id="@+id/bubbleTop"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:alpha="0.22"
                android:src="@drawable/ic_progress_sparkle"
                android:contentDescription="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/starTopLeft"
                android:translationX="8dp" />

            <ImageView
                android:id="@+id/bubbleMidRight"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:alpha="0.18"
                android:src="@drawable/ic_progress"
                android:contentDescription="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/starTopRight"
                android:translationX="-12dp" />

            <ImageView
                android:id="@+id/bubbleBottomLeft"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:alpha="0.16"
                android:src="@drawable/ic_progress_sparkle"
                android:contentDescription="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/heroCard"
                android:translationY="16dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/heroCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="36dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_hero_glow"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/agbalumo"
                        android:text="@string/app_name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="26sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/animationCard"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="110dp"
                        app:cardElevation="12dp"
                        app:cardUseCompatPadding="false">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottieAnimationView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/main_tap_hint"
                            app:lottie_rawRes="@raw/kids_animation"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            tools:visibility="gone" />

                        <!-- Preview-only placeholder for layout editor (tools namespace) -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            tools:visibility="visible"
                            tools:src="@drawable/ic_launcher_vector"
                            tools:ignore="ContentDescription" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvAppSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/agbalumo"
                        android:gravity="center"
                        android:text="@string/main_subtitle"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tapToPlayHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_score_chip"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="@string/main_tap_hint"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- tvBestScoreMain (best quiz score) removed on request -->

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/languageCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/heroCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_language_card"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvLanguageLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/agbalumo"
                        android:text="@string/main_language_label"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvLanguageHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/main_language_hint"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="13sp" />

                    <HorizontalScrollView
                        android:id="@+id/languageSelectorScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fadingEdgeLength="32dp"
                        android:requiresFadingEdge="horizontal"
                        android:scrollbars="none">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/languageChipGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipSpacingHorizontal="8dp"
                            app:selectionRequired="true"
                            app:singleSelection="true" />

                    </HorizontalScrollView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvSelectModeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/agbalumo"
                android:text="@string/main_mode_label"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/languageCard"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:baselineAligned="false"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tvSelectModeLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnRecitalMode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:contentDescription="@string/mode_recital_title"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_mode_recital"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@android:drawable/ic_media_play"
                                android:contentDescription="@null"
                                app:tint="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/agbalumo"
                                android:gravity="center"
                                android:text="@string/mode_recital_title"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/mode_recital_desc"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnPracticeMode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:contentDescription="@string/mode_practice_title"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_mode_practice"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@android:drawable/ic_btn_speak_now"
                                android:contentDescription="@null"
                                app:tint="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/agbalumo"
                                android:gravity="center"
                                android:text="@string/mode_practice_title"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/mode_practice_desc"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnQuizMode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:contentDescription="@string/mode_quiz_title"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_mode_quiz"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@android:drawable/ic_menu_help"
                                android:contentDescription="@null"
                                app:tint="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/agbalumo"
                                android:gravity="center"
                                android:text="@string/mode_quiz_title"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/mode_quiz_desc"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnProgressMode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:contentDescription="@string/mode_progress_title"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_mode_progress"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@android:drawable/ic_menu_sort_by_size"
                                android:contentDescription="@null"
                                app:tint="@color/colorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/agbalumo"
                                android:gravity="center"
                                android:text="@string/mode_progress_title"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/mode_progress_desc"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
