<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F5FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- App title card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_quiz_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EduLingua Ghana"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#1A237E" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multilingual Learning for Basic Schools"
                android:textSize="16sp"
                android:textColor="#455A64"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvBestScoreMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best quiz score: 0 / 10"
                android:textSize="14sp"
                android:textColor="#6D4C41"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- Language selection card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_quiz_card"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a language:"
                android:textSize="16sp"
                android:textColor="#37474F"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnEnglish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="English"
                android:textAllCaps="false"
                android:background="@drawable/bg_quiz_option"
                android:textColor="#212121"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnFrench"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="French"
                android:textAllCaps="false"
                android:background="@drawable/bg_quiz_option"
                android:textColor="#212121"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnTwi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Twi"
                android:textAllCaps="false"
                android:background="@drawable/bg_quiz_option"
                android:textColor="#212121"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnEwe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ewe"
                android:textAllCaps="false"
                android:background="@drawable/bg_quiz_option"
                android:textColor="#212121"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnGa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ga"
                android:textAllCaps="false"
                android:background="@drawable/bg_quiz_option"
                android:textColor="#212121"
                android:padding="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
