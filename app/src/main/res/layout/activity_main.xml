<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- App header card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/cardBackground"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/ic_launcher_round"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvAppSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Multilingual Learning for Basic Schools"
                        android:textSize="16sp"
                        android:fontFamily="@font/agbalumo"
                        android:textColor="@color/textColorSecondary"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/tvBestScoreMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best quiz score: 0 / 10"
                        android:textSize="14sp"
                        android:textColor="@color/correctAnswer"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Language selection card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/cardBackground"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvLanguageLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose language"
                        android:textSize="18sp"
                        android:fontFamily="@font/agbalumo"
                        android:textColor="@color/textColorPrimary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Modes card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select mode"
                        android:textSize="18sp"
                        android:fontFamily="@font/agbalumo"
                        android:textColor="@color/textColorPrimary"
                        android:layout_marginBottom="16dp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:useDefaultMargins="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRecitalMode"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:fontFamily="@font/agbalumo"
                            android:text="Recital Mode"
                            android:textAllCaps="false"
                            app:backgroundTint="@color/colorPrimary"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPracticeMode"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:fontFamily="@font/agbalumo"
                            android:text="Practice Mode"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            app:strokeColor="@color/colorPrimary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnQuizMode"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:fontFamily="@font/agbalumo"
                            android:text="Quiz Mode"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            app:strokeColor="@color/colorPrimary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnProgressMode"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:fontFamily="@font/agbalumo"
                            android:text="Progress Tracker"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            app:strokeColor="@color/colorPrimary" />
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
