<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:gravity="center"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="EduLingua Ghana Logo"
            android:src="@drawable/ic_logo_professional" />

        <TextView
            android:id="@+id/tvAppNameSplash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/agbalumo"
            android:text="EduLingua Ghana"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvTaglineSplash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/agbalumo"
            android:gravity="center"
            android:text="Interactive Language Learning for Basic Schools"
            android:textColor="#E3F2FD"
            android:textSize="15sp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="0" />

</RelativeLayout>
