<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/sparkleHalo"
                android:endColor="@android:color/transparent"
                android:angle="0" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/sparkleHaloSecondary"
                android:endColor="@android:color/transparent"
                android:angle="90" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/sparkleCore" />
        </shape>
    </item>
</layer-list>
